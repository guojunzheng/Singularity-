/*width 750rpx, height 760rpx
760=174+280+56+250*/
.weather-wrapper{
  position: relative;
  padding-top: 20rpx;
  padding-bottom: 250rpx;
}

.locationWrapper{
  font-size: 30rpx;
  line-height: 42rpx;
  align-items: center;
  margin-bottom: 30rpx;
  color: rgba(0, 0, 0, 0.5)!important;
  border: none!important;
  padding: 0!important;
}

.location{
  display: flex;
  justify-content: center;
  align-items: center;
}

.location-icon{
  margin-right: 10rpx;
  width: 21rpx;
  height: 30rpx;
}

.location-text{
  opacity: 0.5
}

.getLocation{
  margin-top:10rpx;
  text-align: center;
  opacity: 0.5;
  height: 42rpx;
}

.city{
  text-align: center;
  font-size: 150rpx;
}

.temp {
  text-align:center;
  font-size:200rpx;
  line-height:280rpx;
  opacity:0.8;
}

.weather {
  text-align: center;
  font-size: 40rpx;
  line-height: 56rpx;
  opacity: 0.65;
}

.weather-bg {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: -1;
}

.des{
 display: flex;
 justify-content: center;
 align-items: center;
 margin-top: 40rpx;
}

.des-icon{
  margin-top: 10rpx;
  width: 36rpx;
  height: 28rpx;
}

.des-text{
  margin-top: 10rpx;
  line-height: 42rpx;
  font-size: 30rpx;
  opacity: 0.5;
}

.weatherForecast{
  display:flex;
  margin-top: 30rpx;
  margin-bottom: 40rpx;
}

.weather-arr{
  display: flex;
  flex-direction: column;
  width: 120rpx;
  height:300rpx;
  align-items: center;
  flex-shrink: 0; /*解决自动压缩问题*/
}

.weatherTime{
  line-height: 42rpx;
  font-size: 30rpx;
}

.weatherIcon{
  margin-top: 50rpx;
  width:60rpx;
  height:60rpx;
}

.tempForecast{
  margin-top: 50rpx;
  line-height: 42rpx;
  font-size: 30rpx;
}

.today-weather{
  display: flex;
  position: absolute;
  align-items: center;
  bottom: 0;
  height:90rpx;
  left: 40rpx;
  right: 40rpx;
  font-size: 30rpx;
  line-height: 42rpx;
  opacity: 0.5;
  border-top: 1px solid rgba(0, 0, 0, 0.1);
}

.today-temp{
  flex-grow:1;
  text-align: right;
  padding-right: 30rpx;
}

.today-arrow{
  width:13rpx;
  height: 24rpx;
}
